<%= form_for(@user) do |f| %>

<div class = "field" >
  <%= f.label :name %><br>
  <%= f.text_field :name, class: 'text_field' %>
</div>

<div class = "field" >
  <%= f.label :email %><br>
  <%= f.text_field :email, class: 'text_field' %>
</div>

<div class = "actions"><br>
  <%= f.submit class: 'btn' %>
</div>
<% end %>